<Window x:Class="SimpleSSH.Windows.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        Title="更新助手"
        Height="500"
        Width="800"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Text="发现新版本！"
                FontSize="24"
                FontWeight="Light" />
            <StackPanel
                Margin="0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock 
                    HorizontalAlignment="Center"
                    Text="当前 SimpleSSH 版本："
                    FontSize="17"
                    x:Name="ThisVersion"/>
                <TextBlock 
                    HorizontalAlignment="Center"
                    Text="更新 SimpleSSH 版本：v1.0"
                    FontSize="17"
                    x:Name="UpdateVersion"/>
                <TextBlock 
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="更新内容：&#13;      1. 修已知问题&#13;      2. 改进了用户界面&#13;      3. 新功能：多实例管理&#13;感谢大家在测试期间提供的反馈和建议！"
                    x:Name="UpdateContent"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Style="{DynamicResource {x:Static ui:ThemeKeys.DefaultButtonStyleKey}}"
                    Height="35"
                    Margin="15,0"
                    Click="Cancel_Click">
                    <Button.Content>
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <ui:FontIcon
                                VerticalAlignment="Center"
                                Icon="{x:Static ui:SegoeFluentIcons.Cancel}"
                                FontSize="16" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="暂不更新"
                                FontSize="16" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button
                    Style="{DynamicResource {x:Static ui:ThemeKeys.AccentButtonStyleKey}}"
                    Height="35"
                    Click="Update_Click">
                    <Button.Content>
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <ui:FontIcon
                                VerticalAlignment="Center"
                                Icon="{x:Static ui:SegoeFluentIcons.DevUpdate}"
                                FontSize="16" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="立即更新"
                                FontSize="16" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
