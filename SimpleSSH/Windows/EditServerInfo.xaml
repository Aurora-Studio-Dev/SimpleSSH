<Window x:Class="SimpleSSH.Windows.EditServerInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        Title="编辑服务器信息"
        Height="500"
        Width="800"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Text="编辑服务器"
                FontSize="24"
                FontWeight="Light" />
            <StackPanel
                Margin="0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                    <Label
                        Width="110"
                        Content="服务器IP："
                        VerticalAlignment="Center" />
                    <TextBox
                        Height="35"
                        Width="250"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        x:Name="ServerIp" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0">
                    <Label
                        Width="110"
                        Content="端口："
                        VerticalAlignment="Center" />
                    <TextBox
                        Height="35"
                        Width="250"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        x:Name="ServerPort"
                        Text="22" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0">
                    <Label
                        Width="110"
                        Content="服务器名称："
                        VerticalAlignment="Center" />
                    <TextBox
                        Height="35"
                        Width="250"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        x:Name="ServerName" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0">
                    <Label
                        Width="110"
                        Content="服务器用户名："
                        VerticalAlignment="Center" />
                    <TextBox
                        Height="35"
                        Width="250"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        x:Name="ServerUsername" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Style="{DynamicResource {x:Static ui:ThemeKeys.DefaultButtonStyleKey}}"
                    Height="35"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click">
                    <Button.Content>
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <ui:FontIcon
                                VerticalAlignment="Center"
                                Icon="{x:Static ui:SegoeFluentIcons.Cancel}"
                                FontSize="16" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="取消"
                                FontSize="16" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button
                    Style="{DynamicResource {x:Static ui:ThemeKeys.AccentButtonStyleKey}}"
                    Height="35"
                    Width="100"
                    Click="SaveButton_Click">
                    <Button.Content>
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <ui:FontIcon
                                VerticalAlignment="Center"
                                Icon="{x:Static ui:SegoeFluentIcons.Save}"
                                FontSize="16" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="保存"
                                FontSize="16" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>