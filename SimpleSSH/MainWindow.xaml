<Window x:Class="SimpleSSH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        Title="SimpleSSH"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        ui:TitleBar.IsIconVisible="False"
        Height="650"
        Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Height="50"
            Margin="10,0,0,0">
            <Image Height="30"
                   Width="30"
                   Source="./Image/logo.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="5,0"/>
            <TextBlock x:Name="TitleBarTextBlock"
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="40,0,0,0">
            </TextBlock>
        </Grid>
        <ui:NavigationView
            x:Name="NavigationView"
            ItemInvoked="NavigationTriggered"
            PaneDisplayMode="Top"
            Grid.Row="1">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="首页"
                    Tag="SimpleSSH.Pages.HomePage"
                    IsSelected="True">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon
                            Icon="{x:Static ui:SegoeFluentIcons.Home}"
                            FontSize="16" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="SSH"
                    Tag="SimpleSSH.Pages.SshPage"
                    IsSelected="True">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon
                            Icon="{x:Static ui:SegoeFluentIcons.Comment}"
                            FontSize="16" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="设置"
                    Tag="SimpleSSH.Pages.SettingsPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon
                            Icon="{x:Static ui:SegoeFluentIcons.Settings}"
                            FontSize="16" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="关于"
                    Tag="SimpleSSH.Pages.AboutPage">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon
                            Icon="{x:Static ui:SegoeFluentIcons.Info}"
                            FontSize="16" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.PaneFooter>
                <ui:AutoSuggestBox x:Name="TitleBarSearchBox" 
                                   PlaceholderText="搜点什么呢...."
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,0"
                                   Width="350">
                    <ui:AutoSuggestBox.QueryIcon>
                        <ui:FontIcon
                            Icon="{x:Static ui:SegoeFluentIcons.Search}"
                            FontSize="16" />
                    </ui:AutoSuggestBox.QueryIcon>
                </ui:AutoSuggestBox>
            </ui:NavigationView.PaneFooter>
            <ui:Frame x:Name="CurrentPage"
                      Margin="15" />
        </ui:NavigationView>
    </Grid>
</Window>